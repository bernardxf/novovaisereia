@import url('https://fonts.googleapis.com/css?family=Raleway:300,400,700')

*
	margin 0
	outline none
	padding 0
	-webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
a
	text-decoration none
ul
	list-style none
body
	font-family Raleway
	font-size 14px
	font-weight 400
	
h2
	color #0A5299
	display block
	font-size 40px
	font-weight 700
	text-align center
	text-transform uppercase

h3
	color #535353
	display block
	font-size 23px
	font-weight 300
	text-align center

.button
	border 2px solid #00529B
	color #005299
	display block
	font-size 20px
	height 55px
	line-height 55px
	margin 15px auto 0
	text-align center
	text-transform uppercase
	width 275px
	&:hover
		background-color #00529B
		color #fff

header
section
footer
	display inline-block
	position relative
	vertical-align top
	width 100%
	.content
		display block
		margin 0 auto
		padding 50px 0
		width 1200px
		
header
	background-color #125697
	.content
		height 100px
		padding 0
	.social
		display block
		float right
		margin 15px 0 0
		a
			color #fff
			display inline-block
			margin 0 12px
			position relative
			vertical-align top
			&:before
				display block
				font-family icomoon
				font-size 20px
			&.inst:before
				content '\e902'
			&.ytube:before
				content '\e906'
			&.fbook:before
				content '\e901'
	.logo
		background url(../images/logo.png) 0 0 no-repeat
		display block
		height 61px
		float left
		margin 20px 0
		width 237px
	ul
		clear both
		display block
		float right
		margin -40px 0 0
		li
			display inline-block
			margin 0 12px
			vertical-align top
			a
				color #fff
				display block
				font-size 17px
				text-transform uppercase
				&:hover
					text-decoration underline
		
#slideshow
	display block
	position relative
	height 650px
	width 100%
	div
		background-position center
		background-repeat no-repeat
		background-size cover
		bottom 0
		display block
		opacity 0
		position absolute
		left 0
		right 0
		top 0
		transition all ease .5s
		&.active
			opacity 1
		&:nth-child(1)
			background-image url(../images/slide/01.png)
		&:nth-child(2)
			background-image url(../images/slide/02.png)
		&:nth-child(3)
			background-image url(../images/slide/03.png)
		&:nth-child(4)
			background-image url(../images/slide/04.png)
		&:nth-child(5)
			background-image url(../images/slide/05.png)
			
		
#competicao
#contato
	background-color #F5F6F7
	
#sobre
	h3
		margin 0 0 30px
	.fotos
		display inline-block
		margin 0 30px 0 0
		vertical-align top
		width 460px
		.foto
			display block
			height 306px
			margin 0 0 20px 0
			width 460px
			&.ft1
				background url(../images/sobre.jpg) 0 0 no-repeat
			&.ft2
				background url(../images/sobre2.jpg) 0 0 no-repeat
				height 259px
			&.ft3
				background url(../images/sobre3.jpg) 0 0 no-repeat
			
	.texto
		display inline-block
		vertical-align top
		width 630px
		p
			color #535353
			display block
			font-size 22px
			font-weight 300
			margin 0 0 15px
#competicao
	ul
		display block
		margin 30px 0 0
		li
			display inline-block
			margin 0 20px 20px
			vertical-align top
			width 355px
			.foto
				background-position center
				background-repeat no-repeat
				background-size cover
				display block
				height 200px
				width 355px
				&.mineiro-inverno
					background-image url(../images/fotos/mineiro-inverno.jpg)
				&.festival3
					background-image url(../images/fotos/3festival.jpg)
				&.festival2
					background-image url(../images/fotos/2festival.jpg)
				&.festival1
					background-image url(../images/fotos/1festival.jpg)
			.dados
				border-top 2px solid #00529B
				background-color #fff
				display block
				height 250px
				padding 10px
				width 335px
				div
					color #545454
					display block
					font-size 15px
					margin 0 0 10px
					position relative
					text-transform uppercase
					&:before
						color #ccc
						display block
						font-family icomoon
						left 0
						position absolute
						top 50%
						transform translateY(-50%)
					& > span 
						border-left 1px solid #DEE1E3
						display block
						margin 0 0 0 50px
						padding 10px 0 10px 10px
						span
							display block
							line-height normal
							margin 0
							text-transform capitalize
					&.data:before
						content '\e900'
						font-size 25px
						height 25px
						left 13px
						width 23px
					&.comp:before
						content '\e904'
						font-size 22px
						height 22px
						left 9px
						width 30px
					&.local:before
						content '\e903'
						font-size 25px
						height 25px
						left 16px
						width 17px
					&.provas:before
						content '\e905'
						font-size 27px
						height 27px
						left 13px
						width 23px
