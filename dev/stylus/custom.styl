@import url('https://fonts.googleapis.com/css?family=Raleway:300,400,700');

*
	margin 0
	outline none
	padding 0
a
	text-decoration none
ul
	list-style none
body
	font-family Raleway
	font-size 14px
	font-weight 400
	
h2
	color #0A5299
	display block
	font-size 40px
	font-weight 700
	text-align center
	text-transform uppercase

h3
	color #535353
	display block
	font-size 23px
	font-weight 300
	text-align center

.button
	border 2px solid #00529B
	color #005299
	display block
	font-size 20px
	height 55px
	line-height 55px
	margin 15px auto 0
	text-align center
	text-transform uppercase
	width 275px
	&:hover
		background-color #00529B
		color #fff

header
section
footer
	display inline-block
	position relative
	width 100%
	.content
		display block
		margin 0 auto
		padding 50px 0
		width 1200px
		
header
	background-color #125697
	.content
		padding 0
		
.banner
	background-image url(../images/slide/01.png)
	background-position center
	background-size cover
	height 650px
		
.competicao
.contato
	background-color #F5F6F7
	
.competicao
	ul
		display block
		margin 30px 0 0
		li
			display inline-block
			margin 0 20px
			vertical-align top
			width 355px
			.foto
				background-image url(http://sportsregras.com/wp-content/uploads/2016/05/natacao-1-e1464170591834.jpg)
				background-position center
				background-repeat no-repeat
				background-size cover
				display block
				height 200px
				width 355
			.dados
				background-color #fff
				display block
				padding 10px
				width 335px
				div
					color #545454
					display block
					font-size 15px
					margin 0 0 10px
					position relative
					text-transform uppercase
					&:before
						color #ccc
						display block
						font-family icomoon
						left 0
						position absolute
						top 50%
						transform translateY(-50%)
					& > span 
						border-left 1px solid #DEE1E3
						display block
						margin 0 0 0 50px
						padding 10px 0 10px 10px
						span
							display block
							line-height normal
							margin 0
							text-transform capitalize
					&.data:before
						content '\e900'
						font-size 25px
						height 25px
						left 13px
						width 23px
					&.comp:before
						content '\e904'
						font-size 22px
						height 22px
						left 9px
						width 30px
					&.local:before
						content '\e903'
						font-size 25px
						height 25px
						left 16px
						width 17px
					&.provas:before
						content '\e905'
						font-size 27px
						height 27px
						left 13px
						width 23px
				

.youtube
	ul
		display block
		margin 50px 0 0
		li
			display inline-block
			padding 0 25px
			vertical-align top
			width 550px
			h3
				text-align left
				font-size 18px
				font-weight 700
				margin 6px 0 0
				text-transform uppercase
	.button
		margin 30px auto 0

footer
	background-color #222429
	.content
		padding 30px 0
		.insta
		.face
			display inline-block
			vertical-align top
			h2
				color #fff
				font-size 40px
				margin 0 0 10px
				text-align left
				text-transform capitalize
		.insta
			width 730px
			h2
				padding 0 0 0 4px
			#instafeed
				a
					display inline-block
					height 170px
					vertical-align top
					margin 5px
					width 170px
					img
						display block
						height 100%
						width 100%
					.info
						display none
	.copy
		background-color #151619
		color #999
		font-size 16px
		height 60px
		line-height 60px
		text-align center















	